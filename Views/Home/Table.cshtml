@{
    ViewData["Title"] = "Table with jQuery";
}

<div class="container mt-4">
    <h2 class="text-center">Dynamic Table with jQuery</h2>

    <div class="table-responsive" style="max-height: 400px; overflow-y: auto;">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                </tr>
            </thead>
            <tbody id="table-body">
                <!-- jQuery จะเพิ่มข้อมูลที่นี่ -->
            </tbody>
        </table>
    </div>
</div>

<script>
$(document).ready(function () {
    // ข้อมูลจำลอง
    var data = [
        { id: 1, name: "John Doe", email: "john@example.com", phone: "+123456789" },
        { id: 2, name: "Jane Smith", email: "jane@example.com", phone: "+987654321" },
        { id: 3, name: "Alice Brown", email: "alice@example.com", phone: "+1122334455" }
    ];

    // เพิ่มข้อมูลลงในตาราง
    $.each(data, function (index, item) {
        var row = "<tr>" +
                    "<td>" + item.id + "</td>" +
                    "<td>" + item.name + "</td>" +
                    "<td>" + item.email + "</td>" +
                    "<td>" + item.phone + "</td>" +
                  "</tr>";
        $("#table-body").append(row);
    });
});
</script>
